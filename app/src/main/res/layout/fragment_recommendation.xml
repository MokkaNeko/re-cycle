<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recommendation.RecommendationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTittleRec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    style="@style/Text.Display.Large"
                    android:text="@string/rekomendasi" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTrashPicture"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTittleRec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/trashPicture"
                        android:contentDescription="@string/gambar_sampah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_app" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/cardTrashPicture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/logoJenis"
                            android:contentDescription="@string/logo_jenis"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_plastic_bottle"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/tvJenis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Text.Display.Large"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/kategori" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/cardJenis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvTittleRecText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Text.Display.XSmall"
                            android:text="Lorem Ipsum"
                            android:layout_marginTop="6dp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/tvRecText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Text.Body.Normal"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula consectetur, ultrices mauris. Maecenas vitae mattis tellus. Nullam quis imperdiet augue. Vestibulum auctor ornare leo, non suscipit magna interdum eu. Curabitur pellentesque nibh nibh, at maximus ante fermentum sit amet. Pellentesque commodo lacus at sodales sodales. Quisque sagittis orci ut diam condimentum, vel euismod erat placerat. In iaculis arcu eros, eget tempus orci facilisis id."
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:justificationMode="inter_word" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRecAddToCatalog"
            android:contentDescription="tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_add"
            android:backgroundTint="@color/green"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>